package pattern;

import java.util.*;

public class RightAngleStar {
 public static void main(String[] args) {
	System.out.print("Enter a value:");
	Scanner sc = new Scanner(System.in);
	int n = sc.nextInt();
	for(int i = 1; i <=n; i++) {
		for(int j = 1; j <= i; j++) {
			System.out.print("*" + " ");
		}
		System.out.println();
	}
	 System.out.println();
	
	for(int i = 1; i <=n; i++) {
		for(int j = n; j >= i; j--) {
			System.out.print("*" + " ");
		}
		System.out.println();
	}
	
	 System.out.println();
	 
//	 for(int i = 1; i <= n; i++) {
//		 for(int j = 1; j < n; j++) {
//			 System.out.print(" ");
//		 }
//		 for(int k = n; k <= n; k++) {
//			 System.out.print("*");
//		 }
//	 }
	 
	 for(int i = 0; i < n; i++) {
		 for(int j = 0; j< n; j++) {
			 if(j == n - i) {
				 System.out.print("*");
			 }
		 }
		 System.out.println();
	 }
	
	
	sc.close();
	
 }
}
