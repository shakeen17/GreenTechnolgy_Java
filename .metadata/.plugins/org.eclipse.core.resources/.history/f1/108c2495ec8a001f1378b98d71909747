package recursions;

public class sumOfDigits {
	static int digits(int n) {
		if(n % 10 == 0) {
			return 0;
		}
//		int sum = 0;
//		int rem = n % 10;
//		sum = sum + rem;
//		digits(n / 10);
		return (n % 10) + digits(n / 10);
	}
public static void main(String[] args) {
	System.out.println(digits(1342));
	System.out.println(digits(0));
}
}
