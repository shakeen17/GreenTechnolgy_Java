package tasks;

public class OddOrEven {
  public static void main(String[] args) {
	  int[] odd = new int[25];
	  int[] even = new int[25];
	  int j = 0;
	  int k = 0;
	for(int i = 1; i <= 50; i++) {
		if(i % 2 == 0) {
			even[j++] = i;
		}
		else {
			odd[k++] = i;
		}
	}
	System.out.println("Display Nos.....");
	
	System.out.println("Odd Nos.....");
	for(int a : odd) {
		System.out.print(a + " ");
	}
	System.out.println("\n");
	System.out.println("Even Nos.....");
	for(int a: even) {
		System.out.print(a + " ");
	}
}
}
