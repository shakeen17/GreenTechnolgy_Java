package pattern;

import java.util.*;

public class RightAngleStar {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a value: ");
        int n = sc.nextInt();

        // Pattern 1: Right-Angle Triangle
        System.out.println("Right-Angle Triangle:");
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print("*" + " ");
            }
            System.out.println();
        }

        System.out.println(); // Empty line for spacing

        // Pattern 2: Inverted Right-Angle Triangle
        System.out.println("Inverted Right-Angle Triangle:");
        for (int i = 1; i <= n; i++) {
            for (int j = n; j >= i; j--) {
                System.out.print("*" + " ");
            }
            System.out.println();
        }

        System.out.println(); // Empty line for spacing

        // Pattern 3: Right-Aligned Triangle
        System.out.println("Right-Aligned Triangle:");
        for (int i = 1; i <= n; i++) {
            for (int j = n; j > i; j--) {
                System.out.print(" ");
            }
            for (int k = 1; k <= i; k++) {
                System.out.print("*");
            }
            System.out.println();
        }

        System.out.println(); // Empty line for spacing

        // Pattern 4: Centered Pyramid
        System.out.println("Centered Pyramid:");
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n - i; j++) {
                System.out.print(" ");
            }
            for (int k = 1; k <= i; k++) {
                System.out.print("* ");
            }
            System.out.println();
        }

        sc.close();
    }
}
