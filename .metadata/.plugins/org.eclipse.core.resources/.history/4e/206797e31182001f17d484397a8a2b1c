package tasks;
import java.util.*;
public class ReverseNo {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	System.out.print("Enter a Number:"); //123
	int n = sc.nextInt();
	int rev = 0;
	while(n != 0) {
		int rem = n % 10; //3
		rev = rev + rem * 10; //0+3
		n /= 10;
	}
	System.out.println("Revesed no:" + rev);
}
}
