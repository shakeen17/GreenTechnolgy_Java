package sampleprograms;

import java.util.*;

public class LearnFuctions {

    // Method to add two numbers
    static void addNos(int a, int b) {
        System.out.println("add: " + (a + b));
    }

    // Method to subtract two numbers
    static void subNos(int a, int b) {
        System.out.println("sub: " + (a - b));
    }

    // Method to multiply two numbers
    static void mulNos(int a, int b) {
        System.out.println("mul: " + (a * b));
    }

    // Method to divide two numbers with exception handling
    static void divNos(int a, int b) {
        try {
            System.out.println("div: " + (a / b));
        } catch (ArithmeticException e) {
            System.out.println("Arithmetic error for Division");
        }
    }

    // Method to calculate modulus with exception handling
    static void modNos(int a, int b) {
        try {
            System.out.println("mod: " + (a % b));
        } catch (ArithmeticException e) {
            System.out.println("Arithmetic error for Modulus");
        }
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = 0, b = 0;  // Declare variables outside try-catch so they are accessible
        try {
            System.out.println("Enter two integers: ");
            a = sc.nextInt(); 
            b = sc.nextInt(); 
            System.out.println(a + " " + b);
        } catch (InputMismatchException e) {
            System.out.println("Input Mismatch Exception....");
            return;  // Exit early if input is invalid
        }

        addNos(a, b);
        subNos(a, b);
        mulNos(a, b);
        divNos(a, b);
        modNos(a, b);
    }
}
