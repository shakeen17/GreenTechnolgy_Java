package tasks;
import java.util.*;
public class ReverseNo {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	System.out.print("Enter a Number:"); 
	int n = sc.nextInt();
	int rev = 0;
	while(n != 0) {
		int rem = n % 10; 
		rev = rev * 10 + rem; 
		n /= 10;
	}
	System.out.println("Revesed no:" + rev);
	sc.close();
}
}
